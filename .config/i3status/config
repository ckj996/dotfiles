# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

order += "ipv6"
order += "disk /"
order += "volume master"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "load"
order += "tztime local"

ipv6 {
        format_up = " IPv6"
        format_down = " down"
}

wireless _first_ {
        format_up = " %essid"
        format_down = " down"
}

ethernet _first_ {
        format_up = " %ip"
        format_down = " down"
}

battery all {
        format = " %status %percentage %remaining"
}

tztime local {
        format = " %H:%M %b %d %a"
}

load {
        format = " %1min"
}

disk "/" {
        format = " %avail"
}

volume master {
        format = " %volume"
        format_muted = " (%volume)"
        device = "pulse"
}

general {
        colors = true
        color_good = "#9ACD32"
        color_degraded = "#FFC125"
        color_bad = "#EE6363"
        interval = 20
}
